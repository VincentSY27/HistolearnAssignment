<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobAppDev.assignment.histolearn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:label="Histolearn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher1">

        <activity android:name="com.mobAppDev.assignment.histolearn.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.mobAppDev.assignment.histolearn.HistoryTodayActivity"
            android:screenOrientation="portrait"

            />
        <activity android:name="com.mobAppDev.assignment.histolearn.QuizMainActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.mobAppDev.assignment.histolearn.Additional_Resources_Menu"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.mobAppDev.assignment.histolearn.QuizScore"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>